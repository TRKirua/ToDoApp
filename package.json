{
  "scripts": {
    "dev": "tailwindcss -i src/css/input.css -o build/assets/styles.css --watch & parcel src/*.html --dist-dir build --public-url ./",
    "build": "rimraf build && npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i src/css/input.css -o src/assets/styles.css --minify",
    "build:js": "parcel build src/*.html --dist-dir build --public-url ./",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "gh-pages": "^6.3.0",
    "parcel": "^2.8.0",
    "postcss": "^8.4.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.3.0"
  }
}
